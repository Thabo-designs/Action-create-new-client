<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/style.css" />
    <title>Document</title>
  </head>
  <body>
    <h4>ADD NEW CLIENTS</h4>
    <nav>
      <ul>
        <li><a href="/clients">Clients</a></li>
        <li><a href="/contacts">Contacts</a></li>
      </ul>
    </nav>

<form class="row g-3" action="/add-client/client" method="POST">
  <div class="col-auto">
    <label for="readText" class="visually-hidden">Add new Client</label>
    <input type="text" readonly class="form-control-plaintext" id="readText" value="Add new Client">
  </div>
  <div class="col-auto">
    <label for="Name" class="visually-hidden">Enter Name</label>
    <input type="text" class="form-control" id="Name" name="name" placeholder="Enter Name">
  </div>
  <div class="col-auto">
    <button type="submit" class="btn btn-primary mb-3">ADD</button>
  </div>
</form>

    <div class="conatainer mt-4">
        <table class="table table-dark table-striped">
            <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col">Name</th>
                <th scope="col">Client code</th>
                <th scope="col">Linked contacts</th>
            </tr>
            </thead>
            <tbody>
                {{#each clients}}
                <tr>
                    <th scope="row">{{id}}</th>
                    <td>{{client_name}}</td>
                    <td>{{client_code}}</td>
                    <td>{{linked_contacts}}</td>
                </tr>
                {{/each}}

            </tbody>
        </table>

      {{#if message}}
        <div class="alert alert-info" role="alert">
          {{message}}
        </div>
      {{/if}}
    </div>
    


    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
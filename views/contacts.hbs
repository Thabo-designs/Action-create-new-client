<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/style.css" />
    <title>Document</title>
  </head>
  <body>
    <h4 class="myh4">Contacts Page</h4>
    <nav>
      <ul>
        <li><a href="/clients">Clients</a></li>
        <li><a href="/contacts">Contacts</a></li>
      </ul>
    </nav>

<form  action="/add-client/contact" method="POST">
 <div class="mb-3">
    <label for="Name" class="form-label">Name</label>
    <input type="text" class="form-control" id="Name" name="name" placeholder="Enter Name">
  </div>
  <div class="mb-3">
    <label for="SurName" class="form-label">SurName</label>
    <input type="text" class="form-control" id="SurName" name="Surname" placeholder="Enter SurName">
  </div>
  <div class="mb-3">
    <label for="email1" class="form-label">Email address</label>
    <input type="email" class="form-control" id="email1" name="email" placeholder="Enter Email">
    {{!-- <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div> --}}
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

    <div class="conatainer mt-4">
      {{#if contacts.length}}
        <table class="table table-dark table-striped">
            <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col">Name</th>
                <th scope="col">Surname</th>
                <th scope="col">Email</th>
                <th scope="col">linked Client</th>
                <th scope="col">Link to Client</th>

            </tr>
            </thead>
            <tbody>
                {{#each contacts}}
                <tr>
                    <th scope="row">{{id}}</th>
                    <td>{{contact_name}}</td>
                    <td>{{contact_surname}}</td>
                    <td>{{contact_email}}</td>
                    <td>{{client_code}}</td>
                   <td>
                        <form action="/add-client/linkClient" method="POST">
                            <input type="hidden" name="contactId" value="{{contact_id}}">
                            <select class="form-select" name="clientId" onchange="this.form.submit()">
                            <option value="">Choose client</option>
                            {{#each ../clients}}
                                <option value="{{client_id}}" {{#ifCond client_id ../client_id}}selected{{/ifCond}}>
                                    {{client_name}}
                                </option>

                            {{/each}}
                            </select>
                        </form>
                    </td>
                </tr>
                {{/each}}

            </tbody>
        </table>
          {{else}}
            <p>No contacts(s) found</p>
          {{/if}}

      {{#if message}}
        <div class="alert alert-info" role="alert">
          {{message}}
        </div>
      {{/if}}
    </div>
    


    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
      crossorigin="anonymous"
    ></script>
  </body>
</html>